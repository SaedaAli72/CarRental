@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container" style="min-height: 70vh; display: flex; align-items: center;">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="text-danger mb-3 fw-bold">Payment Failed</h2>
                    <p class="text-muted mb-4" style="font-size: 1.1rem;">
                        Sorry, your payment could not be processed.<br>
                        Please check your card details and try again.
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="javascript:history.back()" class="btn btn-primary-custom">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                        <a href="/" class="btn btn-secondary-custom">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>