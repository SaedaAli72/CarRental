@model IEnumerable<CarRentalBLL.ViewModels.Car.CarCardVM>


@{
    ViewData["Title"] = "Index";
}

<!-- Hero Section -->
<section class="hero-section" >
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Best Car Rental Service in Egypt</h1>
                <p class="hero-subtitle">Choose from hundreds of modern and reliable cars at competitive prices</p>
                <button asp-controller="car" asp-action="index" class="btn btn-primary-custom btn-lg">Book Now</button>
            </div>
            <div class="col-lg-6">
                <div class="search-box">
                    <h4 class="mb-4">Find Your Perfect Car</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Location</label>
                            <select class="form-select">
                                <option selected>Select City</option>
                                <option>Cairo</option>
                                <option>Alexandria</option>
                                <option>Hurghada</option>
                                <option>Sharm El Sheikh</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Car Type</label>
                            <select class="form-select">
                                <option selected>Select Type</option>
                                <option>Sedan</option>
                                <option>SUV</option>
                                <option>Sports</option>
                                <option>Van</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Pick-up Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Return Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary-custom w-100 mt-2">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Cars Section -->
<section class="featured-section">
    <div class="container">
        <h2 class="section-title">Featured Cars</h2>
        <div class="row">
            @foreach (var item in Model)
{
            <partial name="_CarList" model="item" />
}
           
        </div>
    </div>
</section>

